@model HotelReservation.Models.Prenotazione

@{
    ViewData["Title"] = "Create";
}

<h2>Nuova Prenotazione</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label>Cliente</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option value="">-- Seleziona Cliente --</option>
                </select>
            </div>

            <div class="form-group">
                <label>Camera</label>
                <select asp-for="CameraId" class="form-control" asp-items="ViewBag.CameraId">
                    <option value="">-- Seleziona Camera --</option>
                </select>
            </div>

            <div class="form-group">
                <label>Data Inizio</label>
                <input asp-for="DataInizio" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>Data Fine</label>
                <input asp-for="DataFine" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>Stato</label>
                <select asp-for="Stato" class="form-control">
                    <option value="Confermata">Confermata</option>
                    <option value="Annullata">Annullata</option>
                    <option value="In attesa">In attesa</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Salva</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
