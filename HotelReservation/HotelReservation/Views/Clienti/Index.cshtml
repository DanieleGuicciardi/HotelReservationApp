@model IEnumerable<HotelReservation.Models.Cliente>

<h2>Elenco Clienti</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuovo Cliente</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Telefono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Cognome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.ClienteId">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.ClienteId">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
